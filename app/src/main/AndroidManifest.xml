<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="org.techtown.nanez">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CLEARTEXT_TRAFFIC" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Nanez"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".MainActivity"
            android:exported="false"/>
        <activity
            android:name=".LoginActivity"
            android:exported="false"/>
        <activity
            android:name=".JoinActivity"
            android:exported="false"/>
        <activity
            android:name=".JoinEmailActivity"
            android:exported="false"/>
        <activity
            android:name=".JoinEmailNumActivity"
            android:exported="false"/>
        <activity
            android:name=".JoinPasswordActivity"
            android:exported="false"/>

        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


    </application>

</manifest>