<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.techtown.nanez">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".NanezApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:screenOrientation="portrait"
        android:theme="@style/Theme.Nanez"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".main.view.MainActivity"
            android:theme="@style/Theme.App.Starting"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.nane.login.presentation.view.LoginActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Nanez"
            android:windowSoftInputMode="adjustResize"
            android:exported="false"/>

        <activity
            android:name="com.nane.join.presentation.view.JoinActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Nanez"
            android:windowSoftInputMode="adjustPan"
            android:exported="false"/>

    </application>

</manifest>