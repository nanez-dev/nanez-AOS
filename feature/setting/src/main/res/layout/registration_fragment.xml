<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            android:isScrollContainer="true"
            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="20dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textTitle"
                    style="@style/Head_24_B"
                    android:layout_marginTop="60dp"
                    android:text="@string/msg_title_request_new_perfume_brand_name"
                    android:textColor="@color/gray_800"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textSubTitle"
                    style="@style/Body_14_R"
                    android:layout_marginTop="8dp"
                    android:text="@string/msg_apply_asap"
                    android:textColor="@color/gray_400"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textTitle" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textRequestTitle"
                    style="@style/Body_16_B"
                    android:layout_marginTop="40dp"
                    android:text="@string/label_brand_name"
                    android:textColor="@color/gray_800"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textSubTitle" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edit_request"
                    style="@style/Body_16_R"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/shape_bg50_r12_line50_s1"
                    android:hint="@string/msg_hint_request_new_perfume_brand_name"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="15dp"
                    android:textColor="@color/gray_800"
                    android:textColorHint="@color/gray_400"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textRequestTitle" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/btnDoNext"
                    style="@style/Body_16_B"
                    android:layout_width="0dp"
                    android:layout_marginTop="156dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/enable_gray300_brand500_r12"
                    android:enabled="false"
                    android:foreground="@drawable/ripple_r12"
                    android:gravity="center"
                    android:paddingVertical="16dp"
                    android:text="@string/label_do_next"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintVertical_bias="1" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>