<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="android.text.TextUtils" />

        <variable
            name="viewData"
            type="com.nane.theme.presentation.data.BrandViewData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

<!--        background style 정의 필요 / #E8EAF0 색상의 1dp stroke, 12dp corner round -->
        <ImageView
            android:id="@+id/imgTheme"
            android:background="@drawable/shape_white_r12_line50_s1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:paddingVertical="11dp"
            app:img_load="@{viewData.imageUrl}"
            app:layout_constraintDimensionRatio="164:88"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtThemeTitle"
            style="@style/Body_14_M"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/imgTheme"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="@{viewData.korTitle}" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>