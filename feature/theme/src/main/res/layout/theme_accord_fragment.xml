<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <com.nane.base.view.ActionbarView
                android:id="@+id/actionBar"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtPopularAccordsTitle"
                style="@style/Text_20_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="24dp"
                android:text="@string/label_theme_popular_accords_title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/actionBar" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvPopularAccords"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/txtPopularAccordsTitle" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtAllAccordsTitle"
                style="@style/Text_20_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="52dp"
                android:text="@string/label_theme_all_accords_title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rvPopularAccords" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvAllAccords"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtAllAccordsTitle" />

        </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
