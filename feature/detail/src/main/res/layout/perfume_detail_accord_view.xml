<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingHorizontal="20dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtTitle"
            style="@style/Body_16_B"
            android:layout_width="0dp"
            android:text="@string/label_accord"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/vgAccordOne"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginRight="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/vgAccordSecond"
            app:layout_constraintTop_toBottomOf="@+id/txtTitle">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgAccord"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:adjustViewBounds="true"
                android:background="@drawable/shape_white_r12_line50_s1"
                android:padding="13dp"
                android:scaleType="fitCenter"
                app:layout_constraintDimensionRatio="106:106"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtAccord"
                style="@style/Body_14_M"
                android:layout_marginTop="8dp"
                app:layout_constraintLeft_toLeftOf="@+id/imgAccord"
                app:layout_constraintRight_toRightOf="@+id/imgAccord"
                app:layout_constraintTop_toBottomOf="@+id/imgAccord"
                tools:text="Fruity" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/vgAccordSecond"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            android:layout_marginHorizontal="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/vgAccordOne"
            app:layout_constraintRight_toLeftOf="@+id/vgAccordThird"
            app:layout_constraintTop_toBottomOf="@+id/txtTitle"
            tools:visibility="visible">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgAccordSecond"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:adjustViewBounds="true"
                android:background="@drawable/shape_white_r12_line50_s1"
                android:padding="13dp"
                android:scaleType="fitCenter"
                app:layout_constraintDimensionRatio="106:106"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtAccordSecond"
                style="@style/Body_14_M"
                android:layout_marginTop="8dp"
                app:layout_constraintLeft_toLeftOf="@+id/imgAccordSecond"
                app:layout_constraintRight_toRightOf="@+id/imgAccordSecond"
                app:layout_constraintTop_toBottomOf="@+id/imgAccordSecond"
                tools:text="Fruity" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/vgAccordThird"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            android:layout_marginLeft="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/vgAccordSecond"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtTitle"
            tools:visibility="visible">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgAccordThird"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:adjustViewBounds="true"
                android:background="@drawable/shape_white_r12_line50_s1"
                android:padding="13dp"
                android:scaleType="fitCenter"
                app:layout_constraintDimensionRatio="106:106"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtAccordThird"
                style="@style/Body_14_M"
                android:layout_marginTop="8dp"
                app:layout_constraintLeft_toLeftOf="@+id/imgAccordThird"
                app:layout_constraintRight_toRightOf="@+id/imgAccordThird"
                app:layout_constraintTop_toBottomOf="@+id/imgAccordThird"
                tools:text="Fruity" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>